/* /////////////////////////////////////////////////////////////////////////////////////////////////
QTableWidget */

QTableWidget
{	
	background-color: transparent;
	padding: 10px;
	border-radius: 5px;
	/* gridline-color: #9faeda; */
	gridline-color: rgb(210, 188, 226);
    outline: none;
}

QTableWidget::item
{
