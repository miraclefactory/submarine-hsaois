{
    background-position: center;
}

QTabWidget::pane
{ 
    background-color: rgba(250, 250, 250, 1);
	top: -26px;
	padding-top: 0px;
	padding-left: -8px;
	padding-right: -8px;
	padding-bottom: -8px;
	border-radius: 0px;
}

QTabBar::tab:selected
{
    border-color: rgb(136, 112, 173);
    background-color: rgb(136, 112, 173);
    color: white;
}

